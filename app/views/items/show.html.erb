<div class="container">
    <h5 class="title">MODULE
        <%= @item.serie + @item.height.to_s + "-" + @item.number_drawers.to_s + ( @item.double_door ? "DD" : "" ) + ( @item.single_door ? "D" : "" ) %></h3>

    <table id="showItem">
        <thead>
            <tr>
                <th>Client</th>
                <th>Order</th>
                <th>Serie</th>
                <th>Size</th>
                <th>Number of Drawers</th>
                <th>Doors</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td><%= @ord[0]["description"] %></td>
                <td><%= @ord[0]["order_number"].to_s[0..2] + "." + @ord[0]["order_number"].to_s[3..4] + "." + @ord[0]["order_number"].to_s[5..7] %></td>
                <td><%= @item.serie %></td>
                <td><%= @item.height %></td>
                <td><%= @item.number_drawers %></td>
                <td><%= ( @item.double_door ? "DOUBLE" : "" ) + ( @item.single_door ? "SINGLE" : "" )%></td>
            </tr>
        </tbody>
    </table>
    <br>

    <%= link_to 'Edit', edit_item_path(@item) %>
    |
    <%= link_to 'Home', root_path %>

</div>
