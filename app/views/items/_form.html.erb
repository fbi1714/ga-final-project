<%= form_for(@item, :url => order_items_new_path(@order)) do |f| %>
<% if @item.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@item.errors.count, "error") %>
        prohibited this item from being saved:</h2>

    <ul>
        <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>
<div class="row">
<table id="formItems">
    <thead>
        <tr>
            <th><%= f.label :serie %></th>
            <th><%= f.label :height %></th>
            <th><%= f.label :number_drawers %></th>
            <th><%= f.label :double_door %></th>
            <th><%= f.label :single_door %></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><%= f.text_field :serie, maxlength: 1 %></td>
            <td><%= f.number_field :height, within: 500...4000 %></td>
            <td><%= f.number_field :number_drawers, min: 0, max: 99 %></td>
            <td>
              <%= f.check_box :double_door, :id => "double" %>
              <label for="double"></label>
            </td>
            <td>
              <%= f.check_box :single_door, :id => "single" %>
              <label for="single"></label>
            </td>
        </tr>
    </tbody>
</table>
</div>
<div class="actions">
    <%= f.submit "Submit", class: "waves-effect waves-light blue-grey lighten-2 btn" %>

</div>
<% end %>
